{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "esnext",
            "dom"
        ],
        "baseUrl": "./src",
        "declaration": true,
        "allowJs": false,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": false,
        "strict": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": false,
    },
    "compileOnSave": true,
    "include": [
      "src/**/*"
    ],
    "exclude": [
        ".git",
        "node_modules",
        "lib"
    ]
}